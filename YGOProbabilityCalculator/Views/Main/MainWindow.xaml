<Window x:Class="YGOProbabilityCalculator.Views.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:main="clr-namespace:YGOProbabilityCalculator.Views.Main"
        xmlns:service="clr-namespace:YGOProbabilityCalculator.Service"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        d:DataContext="{d:DesignInstance Type=main:MainWindow, IsDesignTimeCreatable=True}"
        Title="YGO Probability Calculator" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2196F3" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="16,6" />
            <Setter Property="MinWidth" Value="90" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.7" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#DDDDDD" />
            <Setter Property="RowHeaderWidth" Value="0" />
            <Setter Property="HorizontalGridLinesBrush" Value="#EEEEEE" />
            <Setter Property="VerticalGridLinesBrush" Value="#EEEEEE" />
            <Setter Property="GridLinesVisibility" Value="All" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="SelectionUnit" Value="FullRow" />
            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F0F0" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True" />
                                    <Condition Property="IsMouseOver" Value="False" />
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" Value="Transparent" />
                            </MultiTrigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderBrush" Value="Transparent" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#DDDDDD" />
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="Padding" Value="5" />
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition x:Name="DeckRowDefinition" Height="2*" />
            <RowDefinition x:Name="CategoriesRowDefinition" Height="2*" />
            <RowDefinition x:Name="CombosRowDefinition" Height="2*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Yu-Gi-Oh! Advanced Probability Calculator"
                   FontSize="24"
                   FontWeight="Light"
                   Margin="0,0,0,15" />

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Mode:" VerticalAlignment="Center" Margin="0,0,5,0" />
            <ComboBox x:Name="ModeComboBox"
                      SelectedIndex="0"
                      SelectionChanged="ModeComboBox_SelectionChanged"
                      Width="120"
                      Margin="0,0,15,0">
                <ComboBoxItem Content="Default" />
                <ComboBoxItem Content="Simple" />
            </ComboBox>

            <TextBlock Text="Hand Size:" VerticalAlignment="Center" Margin="0,0,5,0" />
            <TextBox x:Name="HandSizeTextBox"
                     Width="50"
                     Text="5"
                     VerticalContentAlignment="Center"
                     Margin="0,0,15,0" />

            <TextBlock Text="Deck Size:" VerticalAlignment="Center" Margin="0,0,5,0" />
            <TextBlock x:Name="DeckCountTextBlock"
                       Text="{Binding DeckCount}"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       Margin="0,0,20,0" />

            <Button Content="Import Deck" Click="LoadDeckButton_Click" Margin="0,0,10,0" />
            <Button Content="Save Session" Click="SaveSessionButton_Click" Margin="0,0,10,0" />
            <Button Content="Load Session" Click="LoadSessionButton_Click" />
        </StackPanel>

        <GroupBox Header="Deck Cards" Grid.Row="2" x:Name="DeckGroupBox">
            <DataGrid x:Name="DeckDataGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="True"
                      CanUserDeleteRows="True"
                      ItemsSource="{Binding DeckEntries}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Copies" Binding="{Binding Copies, Mode=TwoWay}" Width="50" />
                    <DataGridTextColumn Header="Card Name" Binding="{Binding Name, Mode=TwoWay}" Width="*" />
                    <DataGridTemplateColumn Header="Categories" Width="2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <Button Content="Edit" DockPanel.Dock="Right"
                                            Click="EditCategoriesButton_Click"
                                            Tag="{Binding}"
                                            Margin="5,0,0,0" />
                                    <TextBlock Text="{Binding CategoriesString}"
                                               VerticalAlignment="Center" />
                                </DockPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete"
                                        Click="DeleteDeckEntry_Click"
                                        Tag="{Binding}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <GroupBox Header="Combos" Grid.Row="3" x:Name="CombosGroupBox">
            <DataGrid x:Name="ComboDataGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="True"
                      CanUserDeleteRows="True"
                      ItemsSource="{Binding ComboEntries}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Combo Name" Binding="{Binding Name}" Width="2*" />
                    <DataGridTemplateColumn Header="Categories" Width="3*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <Button Content="Edit" DockPanel.Dock="Right"
                                            Click="EditComboCategoriesButton_Click"
                                            Tag="{Binding}"
                                            Margin="5,0,0,0" />
                                    <TextBlock VerticalAlignment="Center">
                                        <TextBlock.Text>
                                            <Binding Path="Categories">
                                                <Binding.Converter>
                                                    <service:CategoryListConverter />
                                                </Binding.Converter>
                                            </Binding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DockPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete"
                                        Click="DeleteComboEntry_Click"
                                        Tag="{Binding}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <GroupBox Header="Categories" Grid.Row="4" x:Name="CategoriesGroupBox">
            <DataGrid x:Name="CategoriesDataGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="True"
                      CanUserDeleteRows="True"
                      ItemsSource="{Binding CategoryEntries}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Category"
                                        Width="*"
                                        Binding="{Binding Category, UpdateSourceTrigger=LostFocus, ValidatesOnExceptions=True}">
                        <DataGridTextColumn.EditingElementStyle>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Validation.HasError" Value="True">
                                        <Setter Property="ToolTip"
                                                Value="{Binding RelativeSource={RelativeSource Self},
                                    Path=(Validation.Errors)[0].ErrorContent}" />
                                        <Setter Property="Background" Value="#FFEBEE" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.EditingElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Min" Binding="{Binding MinCount}" Width="50" />
                    <DataGridTextColumn Header="Max" Binding="{Binding MaxCount}" Width="50" />
                    <DataGridTemplateColumn Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete"
                                        Click="DeleteCategoryEntry_Click"
                                        Tag="{Binding}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>


        <Border Grid.Row="5"
                Background="#F5F5F5"
                CornerRadius="4"
                Padding="10"
                Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="ResultTextBlock"
                           Text=""
                           VerticalAlignment="Center"
                           FontSize="16" />

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal">
                    <Button x:Name="CalculateProbabilityButton"
                            Content="Calculate"
                            Click="CalculateButton_Click"
                            Margin="0,0,10,0" />
                    <Button x:Name="CalculateCombosButton"
                            Content="Calculate"
                            Click="CalculateCombosButton_Click" />
                </StackPanel>
            </Grid>
        </Border>

        <Grid x:Name="LoadingOverlay"
              Grid.Row="0" Grid.RowSpan="6"
              Visibility="Collapsed"
              Background="#80000000">
            <Border Background="White"
                    CornerRadius="8"
                    Width="250"
                    Height="150"
                    Padding="20">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="Calculating..."
                               FontSize="18"
                               HorizontalAlignment="Center" />
                    <ProgressBar IsIndeterminate="True"
                                 Height="4"
                                 Margin="0,20" />
                    <Button Content="Cancel"
                            Click="CancelButton_Click"
                            Width="100" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>